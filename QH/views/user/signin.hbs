<div class="container signinsfondo" style="margin-top: 100px; margin-bottom: 1cm; height: 80vh;">
    <div class="row">
        <div class="main">
            <h3>Effettua il login o <a href="/user/signup">iscriviti</a> </h3>
            
            <div class="row">
                <div class="col-xs-12 col-sm-12 col-md-12">
                    <a href="/user/auth/facebook" class="btn btn-lg btn-info btn-block btn-facebook"
                        style="background-color: #3b5999!important;">
                        <span class="fa fa-facebook float-left mt-1"></span> Facebook</a>
                </div>
                <div class="col-xs-12 col-sm-12 col-md-12 mt-1">
                    <a href="/user/auth/google" class="btn btn-google btn-lg btn-info btn-block ">
                        <span class="fa fa-google float-left mt-1"></span>Google</a>
                </div>
            </div>
            <div class="login-or">
                <hr class="hr-or">
                <span class="span-or">o</span>
            </div>
            <form action="/user/signin" method="post" role="form">
                <div class="form-group">
                    <label for="email">Email</label>
                    <input type="email" id="email" name="email" class="form-control" required>
                </div>
                <div class="form-group">
                    <label for="password">Password</label>
                    <input type="password" id="password" name="password" class="form-control" id="inputPassword"
                        required>
                </div>
                <input type="hidden" name="_csrf" value="{{ csrfToken }}">
                <button type="submit" class="btn btn-primary">Log in</button>
            </form>
            <p class="mt-3">Non hai un account? <a href="/user/signup">Registrati ora!</a></p>

            {{#if hasErrors}}
            <div class="alert alert-danger">
                {{# each messages }}
                <p>{{this}}</p>
                {{/each}}
                {{/if}}
            </div>
        </div>
    </div>
    
</div>